{
    "defaults": {
        "outDir": "./example/out/"
    },

    "paths": [
        {
            "name": "@out",
            "value": "./example/out"
        },

        {
            "name": "@t",
            "value": "./example/templates"
        }
    ],

    "templates": [
        {
            "name": "cl",
            "path": "@t/cl.tsx",
            "subDir": true
        },

        {
            "name": "fn",
            "path": "@t/fn.tsx",

            "rewrites": [
                {
                    "from": "/test.!tsx",
                    "to": "/test.tsx"
                }
            ]
        },

        {
            "name": "page",
            "path": "@t/page",
            "outDir": "./example/out/pages"
        },

        {
            "name": "spreaded",
            "path": "@t/spreaded",
            "outDir": "./example/out/spreaded",
            "subDir": false
        },

        {
            "name": "spreaded_v2",
            "path": "@t/spreaded",
            "outDir": "@out/spreaded_v2",
            "subDir": false
        }
    ]
}